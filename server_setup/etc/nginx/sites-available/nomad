server {
  listen       80;
  server_name  nomad;

  location / {
    try_files $uri @nomad;
  }

  location ~ /.well-known {
    allow all;
  }

  location /static {
    expires 2d;
    add_header Pragma public;
    add_header Cache-Control "public";

    alias /home/<USER>/Nomad/server/static/;
  }

  location @nomad {
    expires epoch;
    add_header Cache-Control no-cache;

    include uwsgi_params;
    uwsgi_pass unix:/tmp/nomad.sock;
  }
}